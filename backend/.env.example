# Database
DATABASE_URL="postgresql://user:password@localhost:5432/eightblock"

# JWT Secret (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-secure-random-secret-min-32-chars-long"

# Redis (REQUIRED for authentication)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Optional: Allow wallet auth from requests without origin header (not recommended for production)
ALLOW_ORIGINLESS_WALLET=false
