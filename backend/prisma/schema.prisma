generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  email         String?   @unique
  name          String?
  role          Role      @default(WRITER)
  avatarUrl     String?
  bio           String?
  articles      Article[]
  comments      Comment[]
  likes         Like[]
  bookmarks     Bookmark[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([walletAddress])
}

model Article {
  id            String       @id @default(cuid())
  title         String
  slug          String       @unique
  description   String
  content       String
  category      String
  featuredImage String?
  tags          TagOnArticle[]
  author        User         @relation(fields: [authorId], references: [id])
  authorId      String
  likes         Like[]
  comments      Comment[]
  bookmarks     Bookmark[]
  views         ArticleView[]
  viewCount     Int          @default(0)
  uniqueViews   Int          @default(0)
  publishedAt   DateTime     @default(now())
  status        ArticleStatus @default(DRAFT)
  featured      Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([viewCount])
  @@index([uniqueViews])
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  article   Article  @relation(fields: [articleId], references: [id])
  articleId String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  status    CommentStatus @default(PENDING)
  createdAt DateTime @default(now())
}

model Like {
  id        String   @id @default(cuid())
  article   Article  @relation(fields: [articleId], references: [id])
  articleId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())

  @@unique([articleId, userId])
}

model Bookmark {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  article   Article  @relation(fields: [articleId], references: [id])
  articleId String
  createdAt DateTime @default(now())

  @@unique([userId, articleId])
}

model Subscription {
  id        String   @id @default(cuid())
  email     String   @unique
  topics    String[]
  createdAt DateTime @default(now())
}

model Tag {
  id     String          @id @default(cuid())
  name   String          @unique
  slug   String          @unique
  posts  TagOnArticle[]
}

model TagOnArticle {
  article   Article @relation(fields: [articleId], references: [id])
  articleId String
  tag       Tag     @relation(fields: [tagId], references: [id])
  tagId     String

  @@id([articleId, tagId])
}

model ArticleView {
  id              String   @id @default(cuid())
  article         Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId       String
  userId          String?  // Optional - for logged-in users
  visitorId       String   // Browser fingerprint or session ID
  ipAddress       String?
  userAgent       String?
  referrer        String?
  country         String?
  city            String?
  device          String?  // mobile, desktop, tablet
  browser         String?
  os              String?
  viewedAt        DateTime @default(now())
  timeOnPage      Int?     // seconds spent on page
  scrollDepth     Int?     // percentage scrolled

  @@unique([articleId, visitorId, viewedAt])
  @@index([articleId])
  @@index([visitorId])
  @@index([viewedAt])
}

enum Role {
  ADMIN
  EDITOR
  WRITER
}

enum ArticleStatus {
  DRAFT
  REVIEW
  PUBLISHED
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
}
